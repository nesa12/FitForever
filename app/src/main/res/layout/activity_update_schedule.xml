<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/workout_background"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:gravity="center"
    tools:context=".UpdateScheduleActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/header03"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="30dp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textStyle="bold"
        android:textColor="#CDDC39"
        android:layout_marginTop="20dp"
        android:textSize="20sp">
    </TextView>
    <TextView
        android:id="@+id/workout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_gravity="right"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="20sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workout Name"
        android:textStyle="bold"
        android:textColor="#CDDC39"
        android:layout_marginTop="20dp"
        android:textSize="20sp">
    </TextView>
    <TextView
        android:id="@+id/workout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workout Name"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_gravity="right"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="20sp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No.of Reps"
        android:textStyle="bold"
        android:textColor="#CDDC39"
        android:layout_marginTop="10dp"
        android:textSize="20sp">
    </TextView>
    <Spinner
        android:id="@+id/reps_count"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="5dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No.of Sets"
        android:textStyle="bold"
        android:textColor="#CDDC39"
        android:layout_marginTop="10dp"
        android:textSize="20sp">
    </TextView>
    <Spinner
        android:id="@+id/sets_count"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:padding="5dp"
        android:spinnerMode="dropdown"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:layout_gravity="right"
            android:text="Delete"
            android:textColor="@color/white"
            android:backgroundTint="#d8392b"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <Button
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:layout_gravity="right"
                android:text="Update"
                android:textColor="@color/black"
                android:backgroundTint="#1fb598"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>